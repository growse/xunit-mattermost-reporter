{
  "name": "xunit-mattermost-reporter",
  "version": "1.0.0",
  "private": true,
  "description": "xUnit results to Mattermost Github Action",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest --clearCache && jest --coverage",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growse/xunit-mattermost-reporter.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Andrew Rowson",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/github": "^2.1.1",
    "@types/bent": "^7.0.2",
    "bent": "^7.3.0",
    "junitxml-to-javascript": "^1.1.4",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/parser": "^2.30.0",
    "@zeit/ncc": "^0.22.1",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.5.0",
    "jest-circus": "^25.4.0",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
