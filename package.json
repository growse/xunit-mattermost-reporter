{
  "name": "xunit-mattermost-reporter",
  "version": "1.0.1",
  "private": true,
  "description": "xUnit results to Mattermost Github Action",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest --clearCache && jest --coverage",
    "build:all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growse/xunit-mattermost-reporter.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Andrew Rowson",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@types/bent": "^7.0.2",
    "bent": "^7.3.7",
    "junitxml-to-javascript": "^1.1.4",
    "moment": "^2.27.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.14",
    "@typescript-eslint/parser": "^3.5.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.4.0",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^23.18.0",
    "jest": "^25.5.4",
    "jest-circus": "^26.1.0",
    "js-yaml": "^3.14.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.6"
  }
}
