{
  "name": "xunit-mattermost-reporter",
  "version": "1.0.1",
  "private": true,
  "description": "xUnit results to Mattermost Github Action",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "ncc": "ncc build",
    "test": "jest --clearCache && jest --coverage",
    "build:all": "yarn run build && yarn run format && yarn run lint && yarn run ncc && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growse/xunit-mattermost-reporter.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Andrew Rowson",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@types/bent": "^7.3.2",
    "bent": "^7.3.12",
    "junitxml-to-javascript": "^1.1.4",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@typescript-eslint/parser": "^4.28.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.29.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^26.6.3",
    "jest-circus": "^27.0.5",
    "js-yaml": "^4.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.4"
  }
}
